import { Component, AfterContentChecked, ChangeDetectorRef } from '@angular/core';
import { NgbActiveModal } from '@ng-bootstrap/ng-bootstrap';

import { I<%= entityAngularName %> } from '../<%= entityFileName %>.model';

@Component({
  selector: '<%= jhiPrefixDashed %>-<%= entityFileName %>-update-modal',
  template: `
    <div class="modal-header">
      <h4 class="modal-title" id="modal-basic-title">Add a <%= entityNameCapitalized %></h4>
      <button type="button" class="close" aria-label="Close" (click)="modal.dismiss()">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form name="editForm" role="form" (ngSubmit)="<%= entityInstance %>Component.save()">
        <<%= jhiPrefixDashed %>-<%= entityFileName %>-update #<%= entityInstance %>Component [<%= entityInstance %>]="<%= entityInstance %>!" (childSave)="onSave($event)" (childClose)="onCancel($event)"></<%= jhiPrefixDashed %>-<%= entityFileName %>-update>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" (click)="<%= entityInstance %>Component.save()" id="save-entity" data-cy="entityCreateSaveButton" [disabled]="!<%= entityInstance %>Component || <%= entityInstance %>Component?.editForm?.invalid || <%= entityInstance %>Component?.isSaving" class="btn btn-primary">
        <fa-icon icon="save"></fa-icon>&nbsp;<span <%= jhiPrefixDashed %>Translate="entity.action.save">Save</span>
      </button>
    </div>
`,
})
export class <%= entityAngularName %>UpdateModalComponent implements AfterContentChecked {
  <%= entityInstance %>?: I<%= entityAngularName %>;

  constructor(public modal: NgbActiveModal, private ref: ChangeDetectorRef) {}

  ngAfterContentChecked(): void {
    this.ref.detectChanges();
  }

  onCancel(reason?: any): void {
    this.modal.dismiss(reason);
  }

  onSave(<%= entityInstance %>: I<%= entityAngularName %>): void {
    this.modal.close(<%= entityInstance %>);
  }
}
