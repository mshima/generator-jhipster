import {
  usernameRegisterSelector,
  emailRegisterSelector,
  firstPasswordRegisterSelector,
  secondPasswordRegisterSelector,
  submitRegisterSelector,
  classInvalid,
  classValid,
} from '../../support/commands';

describe('/account/register', () => {
  beforeEach(() => {
    cy.window().then((win) => {
      win.sessionStorage.clear()
    });
<%_ if (authenticationTypeSession) { _%>
    cy.clearCookie('SESSION');
<%_ } _%>
    cy.clearCookies();
    cy.visit('account/register');

    cy.intercept('POST', '/api/register').as('registerSave');
  });

  it('should load the register page using the menu', () => {
    cy.visit('');
    cy.clickOnRegisterItem();
    cy.get(submitRegisterSelector).should('be.visible');
  });

  it('should load the register page', () => {
    cy.get(submitRegisterSelector).should('be.visible');
  });

  it('should mark required fields as invalid with an empty form', () => {
    cy.get(submitRegisterSelector).click({force: true});
    cy.get(usernameRegisterSelector).should('have.class', classInvalid);
    cy.get(emailRegisterSelector).should('have.class', classInvalid);
    cy.get(firstPasswordRegisterSelector).should('have.class', classInvalid);
    cy.get(secondPasswordRegisterSelector).should('have.class', classInvalid);
  });

  it('should mark username as valid with a valid value', () => {
    cy.get(usernameRegisterSelector)
      .focus()
      .blur()
      .should('have.class', classInvalid)
      .type('test')
      .blur()
      .should('have.class', classValid);
  });

  it('should mark email as valid with a valid value', () => {
    cy.get(emailRegisterSelector)
      .focus()
      .blur()
      .should('have.class', classInvalid)
      .type('testtest.fr')
      .blur()
      .should('have.class', classInvalid)
      .type('test@test.fr')
      .blur()
      .should('have.class', classValid);
  });

  it('should mark password as valid with a valid value', () => {
    cy.get(firstPasswordRegisterSelector)
      .focus()
      .blur()
      .should('have.class', classInvalid)
      .type('test@test.fr')
      .blur()
      .should('have.class', classValid);
  });

  it('should mark confirmation password as valid when matches password', () => {
    cy.get(firstPasswordRegisterSelector).type('test');
    cy.get(secondPasswordRegisterSelector)
      .focus()
      .blur()
      .should('have.class', classInvalid)
      .type('otherPassword')
      .blur()
      .should('have.class', classInvalid)
      .clear()
      .type('test')
      .blur()
      .should('have.class', classValid);
  });

  it('should register a valid user', () => {
    const randomEmail = '<%= faker.internet.email() %>';
    const randomUsername = '<%= faker.internet.userName() %>';
    cy.get(usernameRegisterSelector).type(randomUsername);
    cy.get(emailRegisterSelector).type(randomEmail);
    cy.get(firstPasswordRegisterSelector).type('jondoe');
    cy.get(secondPasswordRegisterSelector).type('jondoe');
    cy.get(submitRegisterSelector).click({force: true});
    cy.wait('@registerSave').then(({ response }) => expect(response.statusCode).to.equal(201));
  });
});
