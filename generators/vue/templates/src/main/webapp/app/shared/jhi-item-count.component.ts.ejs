import { computed, defineComponent, Ref, ref } from 'vue';

export default defineComponent({
  setup() {
    const page: Ref<number> = ref();
    const total: Ref<number> = ref();
    const itemsPerPage: Ref<number> = ref();
    const i18nEnabled: Ref<boolean> = ref(true);
    const first = computed(() => ((page.value - 1) * itemsPerPage.value === 0 ? 1 : (page.value - 1) * itemsPerPage.value + 1));
    const second = computed(() => (page.value * itemsPerPage.value < total.value ? page.value * itemsPerPage.value : total.value));

    return {
      page,
      total,
      itemsPerPage,
      i18nEnabled,
      first,
      second,
    };
  },
});
