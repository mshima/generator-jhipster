import { type ComputedRef, defineComponent, inject } from 'vue';
<%_ if (enableTranslation) { _%>
import { useI18n } from 'vue-i18n';
<%_ } _%>

import { useLogin } from '@/account/login';

export default defineComponent({
  compatConfig: { MODE: 3 },
  setup() {
    const { <% if (authenticationTypeOauth2) { %>login<% } else { %>showLogin<% } %> } = useLogin();
    const authenticated = inject<ComputedRef<boolean>>('authenticated');
    const username = inject<ComputedRef<string>>('currentUsername');

    return {
      authenticated,
      username,
      <% if (authenticationTypeOauth2) { %>login<% } else { %>showLogin<% } %>,
<%_ if (enableTranslation) { _%>
      t$: useI18n().t,
<%_ } _%>
    };
  },
});
