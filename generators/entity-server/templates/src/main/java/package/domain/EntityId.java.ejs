package <%=packageName%>.domain;
import javax.persistence.Column;
import javax.persistence.Embeddable;
<%_ if (validation) { _%>
import javax.validation.constraints.*;
<%_ } _%>
import java.util.Objects;
<%_ if (primaryKey.fields.some(f => f.fieldType === 'UUID')) { _%>
import java.util.UUID;
<%_ } %>

@Embeddable
public class <%= primaryKey.type %> implements java.io.Serializable {
<%_ for (const reference of primaryKey.references.filter(ref => ref.field)) { _%>

    @Column(name = "<%= reference.field.columnName %>")
    private <%= reference.field.fieldType %> <%= reference.name %>;
<%_ } _%>

    public <%= primaryKey.type %>(){}

    public <%= primaryKey.type %>(<%= primaryKey.references.filter(ref => ref.field).map(reference => reference.type + ' ' + reference.name).join(', ') %>){
<%_ for (const reference of primaryKey.references.filter(ref => ref.field)) { _%>
        this.<%= reference.name %> = <%= reference.name %>;
<%_ }_%>
    }
<%_ for (const reference of primaryKey.references.filter(ref => ref.field)) { _%>

    public <%= buildJavaGetter(reference) %>{
        return this.<%= reference.name %>;
    }

    public void <%= buildJavaSetter(reference) %>{
        this.<%= reference.name %> = <%= reference.name %>;
    }

    public <%= primaryKey.type %> <%= buildJavaFluentSetter(reference) %>{
        this.<%= buildJavaSetter(reference, reference.name) %>;
        return this;
    }
<%_ }_%>

    @Override
    public boolean equals(Object o) {
        if (this == o) {
            return true;
        }
        if (!(o instanceof <%= primaryKey.type %>)) {
            return false;
        }
        if (<%- primaryKey.references.map(ref => `${ref.name} == null`).join(' || ') %>) {
            return false;
        }

        <%= primaryKey.type %> <%= entityInstance %>Id = (<%= entityClass %>Id) o;
        return <%- primaryKey.references.map(f => `Objects.equals(${f.name}, ${entityInstance}Id.${f.name})`).join('\n            && ') %>;
    }

    @Override
    public int hashCode() {
        // see https://vladmihalcea.com/how-to-implement-equals-and-hashcode-using-the-jpa-entity-identifier/
        return getClass().hashCode();
    }

    // prettier-ignore
    @Override
    public String toString() {
        return "<%= primaryKey.type %>{" +
<%_ for (reference of primaryKey.references) {
                const isNumeric = ['integer', 'long', 'float', 'double', 'bigdecimal'].includes(reference.field.fieldType.toLowerCase()); _%>
            ", <%= reference.name %>=<% if (! isNumeric) {%>'<% } %>" + <%= buildJavaGet(reference) %> <% if (! isNumeric) { %>+ "'" <% } %>+
<%_ } _%>
            "}";
    }
}
